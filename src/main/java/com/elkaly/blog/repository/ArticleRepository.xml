<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ArticleRepository">
    <select id="selectArticleList" resultType="Article">
        SELECT article_no AS articleNo,
        title,
        contents
        FROM articles
    </select>

    <insert id="postArticle" parameterType="Article">
        <selectKey order="AFTER" keyProperty="articleNo" resultType="int">
            select last_insert_id()
        </selectKey>
        INSERT into articles ( title, contents)
        values (
        #{title},
        #{contents}
        )
    </insert>

</mapper>